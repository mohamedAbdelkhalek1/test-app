<odoo>

    <record id="change_course_state_form" model="ir.ui.view">
        <field name="name">change_course_state_wizard</field>
        <field name="model">test_app.change_course_state</field>
        <field name="arch" type="xml">
            <form string="Change Course state">
                <group>
                    <field name="user_id" invisible="1"/>
                    <field name="course_id" invisible="1"/>
                    <field name="old_state" invisible="1"/>
                    <field name="new_state" required="1"/>
                </group>
                <footer>
                    <button string="Change" type="object" name="change_course_state_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="change_course_state_action_view" model="ir.actions.act_window">
        <field name="name">change_course_state_view</field>
        <field name="res_model">test_app.change_course_state</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_test_app_change_course_state"/>
    </record>

    <record id="launch_change_course_state_wizard" model="ir.actions.server">
        <field name="name">change wizard</field>
        <field name="model_id" ref="model_test_app_course"/>
        <field name="binding_model_id" ref="model_test_app_course"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_change_wizard()
        </field>
    </record>


</odoo>